generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String          @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  username  String          
  email     String          
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

model ChatRoom {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  chatRoomId  String
  name        String
  createdAt   DateTime        @default(now())
}

model Message {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  messageId  String
  content    String
  createdAt  DateTime @default(now())


  senderId   String   
  sender     String


  chatRoomId String   
  chatRoom   String
}

model UserChatRoom {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  userChatRoomId String
  userId     String     
  chatRoomId String     

  userID      String
  chatRoom    String


  joinedAt   DateTime   @default(now())
}

model Test { 
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
}